<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="catalog" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
            <group id="customoptions" translate="label" type="text" sortOrder="99" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Edit Product MAX Option Lines</label>
                <field id="pagesize" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Options Page Size</label>
                    <validate>validate-number validate-greater-than-zero</validate>
                    <frontend_class>admin__control-text</frontend_class>
                </field>
            </group>
        </section>
    </system>
</config>
